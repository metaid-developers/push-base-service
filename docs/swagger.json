                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Push API"
                ],
                "summary": "移除屏蔽聊天",
                "parameters": [
                    {
                        "description": "请求参数",
                        "name": "request",
                        "in": "body",
                        "required": true,
