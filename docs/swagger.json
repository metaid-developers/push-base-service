                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Push API"
                ],
                "summary": "移除用户推送令牌",
                "parameters": [
                    {
                        "description": "请求参数",
                        "name": "request",
